{
  "components": [
    {
      "name": "Hero",
      "description": "Main hero section with headline, subheadline, background media, and CTA",
      "props": [
        {
          "field_name": "headline",
          "type": "text",
          "i18n_key": "hero_headline",
          "max_length_en": 60,
          "max_length_ar": 80,
          "required": true,
          "validation": "required, max_length",
          "default_value": "Turn Visitors into Customers"
        },
        {
          "field_name": "subheadline",
          "type": "richtext",
          "i18n_key": "hero_subheadline",
          "max_length_en": 120,
          "max_length_ar": 160,
          "required": false,
          "validation": "max_length",
          "default_value": "A fully customizable template for marketers who move fast."
        },
        {
          "field_name": "background_media",
          "type": "media",
          "alt_text_key": "hero_background_alt",
          "required": true,
          "validation": "image_or_video",
          "default_value": "hero-bg-default.jpg",
          "focal_point_spec": {
            "x": "percentage",
            "y": "percentage"
          },
          "locale_variants": [
            "hero-background.en.jpg",
            "hero-background.ar.jpg"
          ],
          "formats": [
            "WebP",
            "JPEG"
          ],
          "dimensions": {
            "desktop": "1920\u00d71080px",
            "mobile": "800\u00d7450px"
          }
        },
        {
          "field_name": "cta_text",
          "type": "text",
          "i18n_key": "hero_cta",
          "max_length_en": 20,
          "max_length_ar": 25,
          "required": true,
          "validation": "required, max_length",
          "default_value": "Start Free Trial"
        }
      ],
      "variants": [
        {
          "name": "with_video",
          "description": "Hero with autoplay background video",
          "props_override": {
            "background_media": {
              "type": "video",
              "formats": [
                "MP4",
                "WebM"
              ],
              "max_duration": 30,
              "autoplay": true,
              "muted": true,
              "loop": true
            }
          }
        },
        {
          "name": "with_image",
          "description": "Hero with static background image",
          "props_override": {
            "background_media": {
              "type": "image",
              "formats": [
                "WebP",
                "JPEG"
              ],
              "retina": true
            }
          }
        },
        {
          "name": "with_carousel",
          "description": "Hero with image carousel background",
          "props_override": {
            "background_media": {
              "type": "image_array",
              "min_items": 2,
              "max_items": 5,
              "autoplay_interval": 5000
            }
          }
        }
      ],
      "accessibility_notes": "<section> with aria-label. Video has aria-label and poster fallback.",
      "performance_note": "Critical. Lazy-load video, use poster image for immediate display."
    },
    {
      "name": "FeatureCard",
      "description": "Feature card showing icon, title, and description",
      "props": [
        {
          "field_name": "icon",
          "type": "media",
          "alt_text_key": "feature_icon_alt_{index}",
          "required": true,
          "validation": "image_svg_or_png",
          "default_value": "feature-icon-{index}.svg",
          "locale_variants": [
            "feature-icon-{index}.en.svg",
            "feature-icon-{index}.ar.svg"
          ],
          "dimensions": {
            "width": 48,
            "height": 48
          }
        },
        {
          "field_name": "title",
          "type": "text",
          "i18n_key": "feature_title_{index}",
          "max_length_en": 30,
          "max_length_ar": 40,
          "required": true,
          "validation": "required, max_length",
          "default_value": "Feature Title"
        },
        {
          "field_name": "description",
          "type": "richtext",
          "i18n_key": "feature_desc_{index}",
          "max_length_en": 120,
          "max_length_ar": 160,
          "required": true,
          "validation": "required, max_length",
          "default_value": "Feature description goes here."
        }
      ],
      "variants": [
        {
          "name": "icon_left",
          "description": "Icon on left, text on right",
          "css_classes": [
            "feature-card--icon-left"
          ],
          "layout": "horizontal"
        },
        {
          "name": "icon_top",
          "description": "Icon on top, text below",
          "css_classes": [
            "feature-card--icon-top"
          ],
          "layout": "vertical"
        },
        {
          "name": "icon_only",
          "description": "Icon only with tooltip",
          "css_classes": [
            "feature-card--icon-only"
          ],
          "props_override": {
            "description": {
              "required": false
            }
          }
        }
      ],
      "max_instances": 4,
      "accessibility_notes": "Each card is an <article>. Icons are decorative/have alt text.",
      "performance_note": "Icons in SVG sprite for better performance."
    },
    {
      "name": "Testimonial",
      "description": "Customer testimonial with quote, author, and avatar",
      "props": [
        {
          "field_name": "avatar",
          "type": "media",
          "alt_text_key": "testimonial_avatar_alt_{index}",
          "required": false,
          "validation": "image_circular",
          "default_value": null,
          "locale_variants": [
            "avatar-{index}.en.jpg",
            "avatar-{index}.ar.jpg"
          ],
          "dimensions": {
            "width": 100,
            "height": 100,
            "crop": "circle"
          }
        },
        {
          "field_name": "quote",
          "type": "richtext",
          "i18n_key": "testimonial_quote_{index}",
          "max_length_en": 200,
          "max_length_ar": 250,
          "required": true,
          "validation": "max_length",
          "default_value": "Customer testimonial quote goes here."
        },
        {
          "field_name": "author_name",
          "type": "text",
          "i18n_key": "testimonial_author_{index}",
          "max_length_en": 50,
          "max_length_ar": 60,
          "required": true,
          "validation": "required, max_length",
          "default_value": "Customer Name"
        },
        {
          "field_name": "author_title",
          "type": "text",
          "i18n_key": "testimonial_author_title_{index}",
          "max_length_en": 50,
          "max_length_ar": 60,
          "required": false,
          "validation": "max_length",
          "default_value": "Job Title"
        }
      ],
      "variants": [
        {
          "name": "with_avatar",
          "description": "Testimonial with avatar image",
          "css_classes": [
            "testimonial--with-avatar"
          ],
          "requires_avatar": true
        },
        {
          "name": "card",
          "description": "Testimonial in card layout",
          "css_classes": [
            "testimonial--card"
          ],
          "has_background": true
        },
        {
          "name": "simple",
          "description": "Simple testimonial without card",
          "css_classes": [
            "testimonial--simple"
          ],
          "has_background": false
        }
      ],
      "max_instances": 5,
      "accessibility_notes": "Use <blockquote> and <cite>. Avatar has alt text.",
      "performance_note": "Lazy-load avatar images."
    },
    {
      "name": "Form",
      "description": "Conversion form with multiple fields and validation",
      "props": [
        {
          "field_name": "fields_labels",
          "type": "text_array",
          "i18n_key": "form_field_labels",
          "max_length_en": 240,
          "max_length_ar": 300,
          "required": true,
          "validation": "required, max_length",
          "default_value": "Email Address,Full Name,Company Name,Phone Number,Job Title,Company Size",
          "separator": ","
        },
        {
          "field_name": "fields_placeholders",
          "type": "text_array",
          "i18n_key": "form_field_placeholders",
          "max_length_en": 240,
          "max_length_ar": 300,
          "required": false,
          "validation": "max_length",
          "default_value": "you@company.com,John Smith,Acme Inc.,+1 (555) 123-4567,Marketing Manager,Select company size",
          "separator": ","
        },
        {
          "field_name": "submit_button",
          "type": "text",
          "i18n_key": "form_submit_button",
          "max_length_en": 20,
          "max_length_ar": 25,
          "required": true,
          "validation": "required, max_length",
          "default_value": "Request Demo"
        }
      ],
      "validation_rules": {
        "email": {
          "field_index": 0,
          "type": "email",
          "required": true,
          "message_key": "validation_email"
        },
        "name": {
          "field_index": 1,
          "type": "text",
          "min_length": 2,
          "required": true,
          "message_key": "validation_name"
        },
        "company": {
          "field_index": 2,
          "type": "text",
          "required": true,
          "message_key": "validation_company"
        }
      },
      "accessibility_notes": "Inputs have linked <label>. Validation alerts use role='alert'.",
      "performance_note": "Lazy-load validation scripts."
    }
  ],
  "component_configuration": {
    "max_instances": {
      "features": 4,
      "testimonials": 5,
      "client_logos": 8,
      "form_fields": 6
    },
    "indexing_system": "numbered (0,1,2,3...)",
    "template_format": "Component definitions use {index} templates, instances use numbered keys",
    "rtl_handling": {
      "must_create_arabic_versions": [
        "logos",
        "product_screenshots",
        "promo_videos"
      ],
      "can_mirror": [
        "hero_images",
        "abstract_patterns"
      ],
      "same_asset": [
        "background_videos",
        "avatars",
        "icons"
      ]
    }
  }
}